<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_4dp"
    android:layout_marginTop="@dimen/margin_4dp">

    <ImageView
        android:id="@+id/ivUserImage"
        android:layout_width="@dimen/user_image_height_direct_message"
        android:layout_height="@dimen/user_image_height_direct_message"
        tools:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_8dp"
        android:layout_toRightOf="@id/ivUserImage"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        tools:text="User name" />

    <TextView
        android:id="@+id/tvUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUserName"
        android:layout_marginLeft="@dimen/margin_left_8dp"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_toRightOf="@id/ivUserImage"
        tools:text="User id" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserId"
        android:layout_marginLeft="@dimen/margin_left_8dp"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_toRightOf="@id/ivUserImage"
        android:textColor="@color/colorPrimaryText"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="user status" />
</RelativeLayout>